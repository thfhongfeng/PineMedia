<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:clickable="true">

    <com.pine.player.widget.PineMediaPlayerView
        android:id="@+id/media_player_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"></com.pine.player.widget.PineMediaPlayerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_cur_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <SeekBar
                android:id="@+id/player_progress_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:maxHeight="@dimen/dp_20"
                android:minHeight="@dimen/dp_20"
                android:progressDrawable="@drawable/ap_shape_seek_bar_progress_1"
                android:splitTrack="false"
                android:thumb="@drawable/ap_selector_seek_bar_thumb_1_1"
                android:thumbOffset="@dimen/dp_0" />

            <TextView
                android:id="@+id/player_end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"></View>

            <ImageView
                android:id="@+id/mapv_loop_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ap_ic_play_all_loop_1_1" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="2"></View>

            <ImageView
                android:id="@+id/player_pre_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ap_selector_previous_btn_1_1" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="3"></View>

            <ImageView
                android:id="@+id/player_play_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ap_selector_play_pause_btn_big_1_1" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="3"></View>

            <ImageView
                android:id="@+id/player_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ap_selector_next_btn_1_1" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="2"></View>

            <ImageView
                android:id="@+id/mapv_media_list_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ap_ic_music_list_enable_1_1" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapv_favourite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ap_selector_is_favourite_1_1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

