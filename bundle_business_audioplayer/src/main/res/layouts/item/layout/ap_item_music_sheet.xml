<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ApItemMusicSheetBinding">

        <import type="com.pine.audioplayer.R"></import>

        <variable
            name="sheetBean"
            type="com.pine.audioplayer.db.entity.ApMusicSheet" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10">

            <com.pine.tool.widget.view.RoundImageView
                android:id="@+id/img_iv"
                emptySrc="@{R.mipmap.res_iv_top_bg_horizontal}"
                imageUrl="@{sheetBean.imageUri}"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_20"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="@{sheetBean.name}"
                    android:textColor="@color/dark_gray_black"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/ap_home_sheet_item_desc(sheetBean.count)}"
                    android:textColor="@color/dark_gray_black"
                    android:textSize="@dimen/sp_14"></TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/go_detail_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/res_ic_right_arrow_2_1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_68"
            android:background="@color/light_gray"></View>
    </LinearLayout>
</layout>