<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ApMainActivityBinding">

        <variable
            name="music"
            type="com.pine.audioplayer.db.entity.ApSheetMusic" />

        <variable
            name="isLightTheme"
            type="boolean" />

        <variable
            name="presenter"
            type="com.pine.audioplayer.ui.activity.ApMainActivity.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/album_art_bg_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"></ImageView>

            <View
                android:id="@+id/alpha_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentBottom="true"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/go_back_btn"
                    selectState="@{isLightTheme==false}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:onClick="@{presenter::onGoBackClick}"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/res_selector_go_back_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/go_back_btn"
                    android:layout_weight="1"
                    android:textColor="@drawable/res_selector_text_select_color_1"
                    android:textSize="@dimen/sp_18"></TextView>

                <ImageView
                    selectState="@{isLightTheme==false}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:onClick="@{presenter::onTopMenuClick}"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/res_selector_menu_1" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/subtitle_container_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{music.name}"
                android:textColor="@{isLightTheme?@color/dark_gray_black:@color/white}"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/author_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@{music.author}"
                android:textColor="@{isLightTheme?@color/dark_gray_black:@color/white}"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subtitle_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:gravity="center"
                    android:textColor="@{isLightTheme?@color/dark_gray_black:@color/white}"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>

        <com.pine.audioplayer.widget.view.ApMainAudioPlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.pine.audioplayer.widget.view.ApMainAudioPlayerView>
    </LinearLayout>
</layout>