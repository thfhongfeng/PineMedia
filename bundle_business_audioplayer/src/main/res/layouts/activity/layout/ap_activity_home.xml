<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ApHomeActivityBinding">

        <variable
            name="allMusicCount"
            type="java.lang.Integer" />

        <variable
            name="favouriteCount"
            type="java.lang.Integer" />

        <variable
            name="recentCount"
            type="java.lang.Integer" />

        <variable
            name="customSheetCount"
            type="java.lang.Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/all_music_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/res_ic_all_music"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="@{@string/ap_home_all_music(allMusicCount)}"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/sp_14"></TextView>

            <TextView
                android:id="@+id/my_favourite_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/res_ic_favourite"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="@{@string/ap_home_my_favourite(favouriteCount)}"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/sp_14"></TextView>

            <TextView
                android:id="@+id/recent_music_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/res_ic_recent"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="@{@string/ap_home_recent_music(recentCount)}"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/sp_14"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sheet_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_5"
                    android:text="@{@string/ap_home_my_music_sheet(customSheetCount)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/create_sheet_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/res_ic_add"></ImageView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sheet_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</layout>