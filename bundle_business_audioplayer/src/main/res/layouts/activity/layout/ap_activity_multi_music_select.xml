<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ApMultiMusicSelectActivityBinding">

        <variable
            name="presenter"
            type="com.pine.audioplayer.ui.activity.ApMultiMusicSelectActivity.Presenter" />

        <variable
            name="musicSheet"
            type="com.pine.audioplayer.db.entity.ApMusicSheet" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/all_select_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/res_selector_all_select"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:onClick="@{presenter::onAllSelectClick}"
            android:background="@color/white_smoke"
            android:text="@string/ap_mms_all_select"
            android:textColor="@color/dark_black_gray"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</layout>