<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ApMusicListActivityBinding">

        <import type="android.view.View"></import>

        <import type="android.text.TextUtils"></import>

        <import type="com.pine.audioplayer.R"></import>

        <import type="com.pine.audioplayer.ApConstants"></import>

        <variable
            name="presenter"
            type="com.pine.audioplayer.ui.activity.ApMusicListActivity.Presenter" />

        <variable
            name="musicSheet"
            type="com.pine.audioplayer.db.entity.ApMusicSheet" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                emptySrc="@{R.mipmap.res_iv_top_bg}"
                errorSrc="@{R.mipmap.res_iv_top_bg}"
                imageUrl="@{musicSheet.imageUri}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="centerCrop"
                android:visibility="@{musicSheet.sheetType==ApConstants.MUSIC_SHEET_TYPE_CUSTOM ? View.VISIBLE:View.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/go_back_btn"
                    selectState="@{musicSheet.sheetType==ApConstants.MUSIC_SHEET_TYPE_CUSTOM}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:onClick="@{presenter::onGoBackClick}"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/res_selector_go_back_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/go_back_btn"
                    android:layout_weight="1"
                    android:text="@{musicSheet.name}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:visibility="@{musicSheet.sheetType!=ApConstants.MUSIC_SHEET_TYPE_CUSTOM ? View.VISIBLE:View.INVISIBLE}"></TextView>

                <ImageView
                    selectState="@{musicSheet.sheetType==ApConstants.MUSIC_SHEET_TYPE_CUSTOM}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:onClick="@{presenter::onTopMenuClick}"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/res_selector_menu_1"
                    android:visibility="@{musicSheet.sheetType==ApConstants.MUSIC_SHEET_TYPE_CUSTOM ? View.VISIBLE:View.GONE}" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/res_shape_round_55a996"
            android:onClick="@{(view)->presenter.onPlayOrAddBtnClick(view, musicSheet.count&lt;1)}"
            android:paddingLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_6"
            android:text="@{musicSheet.count&lt;1 ? @string/ap_ml_add_music:@string/ap_ml_play_all}"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:text="@{@string/ap_ml_total_count(musicSheet.count)}"
                android:textColor="@color/dark_black_gray"
                android:textSize="@dimen/sp_14"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{presenter::onGoMultiSelectUiClick}"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/res_ic_multi_select_menu" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</layout>